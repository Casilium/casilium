$changesUrl       = (string) ($this->changesUrl ?? '/ticket/list/changes');
$refreshInterval  = (int) ($this->refreshIntervalMs ?? 60000);
$encodedChangesUrl = json_encode($changesUrl);
echo <<<JS
(function() {
    var changesPath = {$encodedChangesUrl};
    var pollIntervalMs = {$refreshInterval};
    var listContainerId = 'ticket-list-content';
    var banner = document.getElementById('ticket-list-update-banner');
    var refreshButton = document.getElementById('ticket-list-refresh-button');
    var rowsSelector = document.getElementById('ticket-rows-per-page');
    var listContainer = document.getElementById(listContainerId);
    var currentFingerprint = null;
    var pendingFingerprint = null;
    var pollingToken = 0;
    var applyingUpdate = false;

    function initTimeago(context) {
        if (!window.jQuery || typeof jQuery.fn.timeago !== 'function') {
            return;
        }

        jQuery.timeago.settings.allowFuture = true;
        jQuery(context || document).find('.timeago').timeago();
    }

    function hideBanner() {
        if (banner) {
            banner.classList.add('d-none');
        }
    }

    function showBanner() {
        if (banner) {
            banner.classList.remove('d-none');
        }
    }

    function buildChangesUrl() {
        var search = window.location.search || '';
        return changesPath + search;
    }

    function checkForChanges() {
        if (!listContainer || document.hidden || applyingUpdate) {
            return;
        }

        var requestToken = ++pollingToken;
        fetch(buildChangesUrl(), {
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Cache-Control': 'no-cache'
            }
        })
            .then(function(response) {
                if (!response.ok) {
                    throw new Error(String(response.status));
                }

                return response.json();
            })
            .then(function(payload) {
                if (requestToken !== pollingToken || !payload || !payload.fingerprint) {
                    return;
                }

                if (currentFingerprint === null) {
                    currentFingerprint = payload.fingerprint;
                    return;
                }

                if (payload.fingerprint !== currentFingerprint) {
                    pendingFingerprint = payload.fingerprint;
                    showBanner();
                    return;
                }

                pendingFingerprint = null;
                hideBanner();
            })
            .catch(function() {
                // Keep current list state on polling failures.
            });
    }

    function refreshList() {
        if (!listContainer || applyingUpdate) {
            return;
        }

        applyingUpdate = true;

        fetch(window.location.href, {
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Cache-Control': 'no-cache'
            }
        })
            .then(function(response) {
                if (!response.ok) {
                    throw new Error(String(response.status));
                }

                return response.text();
            })
            .then(function(html) {
                var parser = new DOMParser();
                var nextDocument = parser.parseFromString(html, 'text/html');
                var nextListContainer = nextDocument.getElementById(listContainerId);

                if (!nextListContainer) {
                    throw new Error('Ticket list container not found');
                }

                listContainer.innerHTML = nextListContainer.innerHTML;
                initTimeago(listContainer);
                currentFingerprint = null;
                pendingFingerprint = null;
                hideBanner();
                checkForChanges();
            })
            .catch(function() {
                // Keep current list state on update failures.
            })
            .then(function() {
                applyingUpdate = false;
            });
    }

    initTimeago(document);

    if (rowsSelector) {
        rowsSelector.addEventListener('change', function() {
            var url = new URL(window.location.href);
            url.searchParams.set('rows', rowsSelector.value);
            url.searchParams.delete('per_page');
            url.searchParams.set('page', '1');
            window.location.assign(url.toString());
        });
    }

    if (!listContainer || !refreshButton || !banner) {
        return;
    }

    refreshButton.addEventListener('click', refreshList);
    document.addEventListener('visibilitychange', function() {
        if (!document.hidden) {
            checkForChanges();
        }
    });

    checkForChanges();
    window.setInterval(checkForChanges, pollIntervalMs);
})();
JS;
