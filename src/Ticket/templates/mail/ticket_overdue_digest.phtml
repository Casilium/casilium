            <tr>
                <td><?= $this->escapeHtml((string) ($ticket['id'] ?? '')) ?></td>
                <td><?= $this->escapeHtml($ticket['summary'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['organisation'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['contactName'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['assignedTo'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['status'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['dueDate'] ?? '') ?></td>
                <td><?= $this->escapeHtml($ticket['overdueBy'] ?? '') ?></td>
            </tr>
        <?php endforeach; ?>
    </tbody>
</table>
