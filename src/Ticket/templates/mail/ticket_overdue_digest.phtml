<?php
    $queueName   = $this->queueName ?? 'Queue';
    $tickets     = $this->tickets ?? [];
    $generatedAt = $this->generatedAt ?? '';
?>
<p>
    <strong>Overdue tickets digest</strong><br>
    Queue: <?= $this->escapeHtml($queueName) ?><br>
    Generated: <?= $this->escapeHtml($generatedAt) ?>
