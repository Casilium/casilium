$this->inlineScript()->captureStart();
echo <<<JS
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $('#wrapper').toggleClass("toggled");
});

(function() {
    var searchInput = document.getElementById('ticket-search');
    var resultsDiv = document.getElementById('ticket-search-results');
    var searchForm = document.getElementById('ticket-search-form');
    var debounceTimer = null;

    if (!searchInput || !resultsDiv) return;

    searchInput.addEventListener('input', function() {
        clearTimeout(debounceTimer);
        var query = this.value.trim();
        if (query.length < 3) {
            resultsDiv.style.display = 'none';
            resultsDiv.innerHTML = '';
            return;
        }
        debounceTimer = setTimeout(function() {
            fetch(searchInput.getAttribute('data-url') + '?q=' + encodeURIComponent(query))
                .then(function(response) {
                    if (!response.ok) throw new Error(response.status);
                    return response.json();
                })
                .then(function(data) {
                    resultsDiv.innerHTML = '';
                    if (data.length === 0) {
                        var noResults = document.createElement('span');
                        noResults.className = 'dropdown-item text-muted';
                        noResults.textContent = 'No tickets found';
                        resultsDiv.appendChild(noResults);
                        resultsDiv.style.display = 'block';
                        return;
                    }
                    data.forEach(function(ticket) {
                        var item = document.createElement('a');
                        item.className = 'dropdown-item py-1';
                        item.href = '/ticket/' + ticket.uuid;
                        var title = document.createElement('div');
                        title.textContent = '#' + ticket.id + ' - ' + ticket.shortDescription;
                        var meta = document.createElement('div');
                        meta.className = 'small text-muted';
                        var date = ticket.createdAt ? ticket.createdAt.substring(0, 10) : '';
                        meta.textContent = ticket.organisationName + ' | ' + ticket.contactName + ' | ' + ticket.statusDescription + ' | ' + date;
                        item.appendChild(title);
                        item.appendChild(meta);
                        resultsDiv.appendChild(item);
                    });
                    resultsDiv.style.display = 'block';
                })
                .catch(function() {
                    resultsDiv.innerHTML = '';
                    var errorItem = document.createElement('span');
                    errorItem.className = 'dropdown-item text-danger';
                    errorItem.textContent = 'Search unavailable';
                    resultsDiv.appendChild(errorItem);
                    resultsDiv.style.display = 'block';
                });
        }, 250);
    });

    searchForm.addEventListener('submit', function(e) {
        var query = searchInput.value.trim();
        if (!/^\d+$/.test(query)) {
            e.preventDefault();
        }
    });

    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            resultsDiv.style.display = 'none';
        }
    });

    document.addEventListener('click', function(e) {
        if (!searchForm.contains(e.target)) {
            resultsDiv.style.display = 'none';
        }
    });
})();
JS;
$this->inlineScript()->captureEnd();
